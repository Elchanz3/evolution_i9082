show_progress(0.1, 0);
ui_print("");
ui_print("");
ui_print("  ************************************************");
ui_print("  *                                              *");
ui_print("  *          CUSTOM KERNELS	       *");
ui_print("  *                                      *");
ui_print("  * -=       	   By k2wl              =- *");
ui_print("  *                                      *");
ui_print("  ************************************************");
ui_print("");
ui_print("");

###
# PRE STUFF
###
assert(
	getprop("ro.product.device") == "baffin" || 
	getprop("ro.build.product") == "baffin"
);

###
# MOUNTING PARTITIONS
###
set_progress(0.01);
ui_print(" ");
ui_print("@Mount Partition");
	# mount /cache
	set_progress(0.06);
	ui_print("  Mount /cache");
	mount("ext4", "EMMC", "/dev/block/mmcblk0p18", "/cache");
	
	# mount /system
	set_progress(0.08);
	ui_print("  Mount /system");
	mount("ext4", "EMMC", "/dev/block/mmcblk0p19", "/system");

#####################################################################
symlink("toolbox", "/system/bin/printenv");
symlink("toolbox", "/system/bin/touch");
symlink("toolbox", "/system/bin/wipe");
symlink("toolbox", "/system/bin/getprop");
symlink("toolbox", "/system/bin/lsmod");
symlink("toolbox", "/system/bin/mount");
